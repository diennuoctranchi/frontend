<section class="page-banner">
    <div class="image-layer" style="background-image:url(/img/bg-breadcrumb.jpg);"></div>
    <div class="auto-container">
        <h1>Câu Hỏi Thường Gặp</h1>
        <div class="breadcrumb-box">
            <div class="auto-container">
                <ul class="bread-crumb clearfix">
                    <li class="breadcrumb-item">
                        <%= link_to 'Trang Chủ', root_link, title: 'Điện Nước Trần Chí &#8211; Thợ sửa điện nước tại Biên Hòa'.html_safe %>
                    </li>
                    <li class="breadcrumb-item">Câu Hỏi Thường Gặp</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<div data-elementor-type="wp-page" data-elementor-id="399" class="elementor elementor-399" data-elementor-settings="[]">
    <div class="elementor-inner">
        <div class="elementor-section-wrap">
            <section class="elementor-section elementor-top-section elementor-element elementor-element-59e51842 elementor-section-stretched elementor-section-full_width elementor-section-height-default elementor-section-height-default" data-id="59e51842" data-element_type="section" data-settings="{&quot;stretch_section&quot;:&quot;section-stretched&quot;}">
                <div class="elementor-container elementor-column-gap-no">
                    <div class="elementor-row">
                        <div class="elementor-column elementor-col-100 elementor-top-column elementor-element elementor-element-733f143a" data-id="733f143a" data-element_type="column">
                            <div class="elementor-column-wrap elementor-element-populated">
                                <div class="elementor-widget-wrap">
                                    <div class="elementor-element elementor-element-2cd4fc1b elementor-widget elementor-widget-electman_faq" data-id="2cd4fc1b" data-element_type="widget" data-widget_type="electman_faq.default">
                                        <div class="elementor-widget-container">
                                            <section class=" faq-section">
                                                <div class="auto-container">
                                                    <div class="left-image2">
                                                        <div class="image">
                                                            <%= image_tag '/img/bong-den-dien.png', alt: '', title: '' %>
                                                        </div>
                                                    </div>
                                                    <div class="right-image1">
                                                        <div class="image">
                                                            <%= image_tag '/img/dong-ho-do-van-nang.png', alt: '', title: '' %>
                                                        </div>
                                                    </div>
                                                    <div class="sec-title centered wow fadeInUp" data-wow-delay="0ms"  data-wow-duration="2000ms">
                                                        <div class="upper-text">
                                                            <span class="logo_bolt2">
                                                                <%= image_tag '/img/bolt.gif', alt: '', title: '' %>
                                                            </span> Câu Hỏi Thường Gặp
                                                        </div>
                                                        <h2>Một Số Câu Hỏi Thường Gặp</h2>
                                                    </div>
                                                    
                                                    <div class="faq-container">
                                                        <div class="accordion-box">
                                                            <% @faqs.each_with_index do |faq, index| %>
                                                                <div class="accordion block <%= 'current active-block' if index == 0 %>">
                                                                    <div class="acc-btn <%= 'active' if index == 0 %>">
                                                                        <%= faq.get_question %>
                                                                        <div class="icon flaticon-cross"></div>
                                                                    </div>
                                                                    <div class="acc-content">
                                                                        <div class="content">
                                                                            <div class="text text-justify"><%= faq.get_reply %></div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            <% end %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </section>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>