<section class="page-banner">
    <div class="image-layer" style="background-image:url(/img/bg-breadcrumb.jpg);"></div>
    <div class="auto-container">
        <h1>Chia Sẻ Kinh Nghiệm</h1>
        <div class="breadcrumb-box">
            <div class="auto-container">
                <ul class="bread-crumb clearfix">
                    <li class="breadcrumb-item">
                        <%= link_to 'Trang Chủ', root_link, title: 'Điện Nước Trần Chí &#8211; Thợ sửa điện nước tại Biên Hòa'.html_safe %>
                    </li>
                    <li class="breadcrumb-item">Chia Sẻ Kinh Nghiệm</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="sidebar-page-container mrindex">
    <div class="auto-container">
        <div class="row clearfix">
            <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 side_right">
                <%= render partial: '/frontend/blog/sidebar' %>
            </div>
            <div class="content-side col-xs-12 col-sm-12 col-md-12 col-lg-8">
                <% @blogs.each do |blog| %>
                    <div class="post type-post status-publish format-standard has-post-thumbnail hentry category-h4-blog-right tag-manufacture tag-products">
                        <div class="news-block-four">
                            <div class="inner-box">
                                <div class="image-box">
                                    <figure class="image">
                                        <%= link_to image_set_tag(blog.blog_image,
                                                                    {blog.blog_image(:detail_1920x750) => '1920w',
                                                                    blog.blog_image(:detail_1536x600) => '1536w',
                                                                    blog.blog_image(:detail_1040x400) => '1040w',
                                                                    blog.blog_image(:detail_768x300) => '768w',
                                                                    blog.blog_image(:detail_600x234) => '600w',
                                                                    blog.blog_image(:detail_300x117) => '300w'},
                                                    title: blog.get_name, alt: blog.get_name, size: '1920x750', sizes: '(max-width: 1920px) 100vw, 1920px', loading: 'lazy', class: 'attachment-post-thumbnail size-post-thumbnail wp-post-image'),
                                            blog_detail_link(blog), title: blog.get_name %>
                                    </figure>
                                    <div class="post-date">
                                        <span class="day"><%= blog.created_at.strftime('%d') %></span>
                                        <span class="month"><%= blog.created_at.strftime('%m') %></span>
                                    </div>
                                </div>
                                <div class="lower-box">
                                    <div class="meta-info home_post">
                                        <ul class="blog-one__meta list-unstyled">
                                            <li><span class="fa fa-user"></span> Điện Nước Trần Chí</li>
                                        </ul>
                                    </div>
                                    <h3><%= link_to blog.get_name, blog_detail_link(blog), title: blog.get_name %></h3>
                                    <div class="text text-justify">
                                        <p><%= blog.short_description %> [&hellip;]</p>
                                    </div>
                                    <div class="lower-row clearfix">
                                        <div class="link-box">
                                            <%= link_to '<span class="txt">ĐỌC TIẾP</span> <span class="icon flaticon-arrows-11"></span>'.html_safe, blog_detail_link(blog), title: blog.get_name %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
                <%= paginate @blogs, external_window: 3 %>
            </div>
        </div>
    </div>
</section>